[Unit]
Description=XenProxy LXC Multi-Protocol Gateway Admin Panel
After=network.target postgresql.service

[Service]
Type=simple
WorkingDirectory=/root/xenproxy
Environment="DATABASE_URL=postgresql://postgres:postgres@localhost/ipgw"
ExecStart=/root/xenproxy/venv/bin/python /root/xenproxy/app.py
Restart=on-failure
User=root

[Install]
WantedBy=multi-user.target
