# XenProxy Production Environment Configuration
# Copy this file to .env and update values for production

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secure-secret-key-here-change-this
PRODUCTION=true

# Database Configuration (SQLite by default)
# DATABASE_URL=sqlite:///instance/ip_gateway.db

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-immediately

# Application Settings
HOST=0.0.0.0
PORT=3030

# Logging
LOG_LEVEL=INFO
LOG_FILE=xenproxy.log

# Security
SESSION_TIMEOUT=3600
MAX_CONTENT_LENGTH=16777216

# LXC Configuration
BRIDGE_NAME=xenproxy0
SUBNET_RANGE=172.16.100.0/24
NETWORK_INTERFACE=eth0

# Monitoring
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=60